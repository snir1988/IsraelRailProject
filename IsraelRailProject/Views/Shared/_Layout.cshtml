@{
    Layout = null;
}
<!doctype html>
<html lang="he" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Israel Rail</title>

    <!-- Bootstrap (CDN) כדי למנוע 404 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- ה־CSS המקומי שלך (אם קיים) -->
    <link rel="stylesheet" href='@Url.Content("~/Content/template/css/style.css")' />

    <style>
        /* בסיס RTL ונראות כללית */
        body {
            direction: rtl;
            text-align: right;
            background: #f5f7fb;
        }

        .layout {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            background: #0f172a;
            color: #cbd5e1;
            position: sticky;
            top: 0;
            height: 100vh;
            transition: width .2s ease, transform .2s ease;
        }
        .sidebar .brand {
            color: #fff;
            font-weight: 700;
            padding: 16px 20px;
            border-bottom: 1px solid #1e293b;
        }
        .sidebar nav a {
            display: block;
            color: #cbd5e1;
            text-decoration: none;
            padding: 12px 20px;
        }
        .sidebar nav a:hover, .sidebar nav a.active {
            background: #1e293b;
            color: #fff;
        }

        /* מצב מכווץ בדסקטופ */
        .sidebar.collapsed { width: 72px; overflow: hidden; }
        .sidebar.collapsed .brand { text-align: center; }
        .sidebar.collapsed nav a { padding: 12px; text-align: center; white-space: nowrap; }

        /* Main */
        .main {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        /* Navbar */
        .topbar {
            background: #fff;
            border-bottom: 1px solid #e5e7eb;
            padding: 10px 16px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 12px;
        }
        .topbar .title { font-weight: 700; }

        /* Content */
        .content { padding: 24px; }

        /* Cards look */
        .card {
            border: 1px solid #e5e7eb;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0,0,0,.04);
        }
        .card-header {
            padding: 16px 20px;
            border-bottom: 1px solid #f1f5f9;
            font-weight: 600;
            background: #fff;
            border-top-left-radius: 16px;
            border-top-right-radius: 16px;
        }
        .card-body {
            padding: 20px;
            background: #fff;
            border-bottom-left-radius: 16px;
            border-bottom-right-radius: 16px;
        }

        /* מובייל: ברירת מחדל סגור, נפתח ע"י toggle */
        @@media (max-width: 992px) {
            .sidebar {
                position: fixed;
                z-index: 1040;
                inset-block-start: 0;
                inset-inline-end: 0; /* ב-RTL: ימין */
                height: 100vh;
                transform: translateX(100%); /* מוסתר מחוץ למסך מימין */
                pointer-events: none; /* לא חוסם קליקים כשהוא סגור */
            }
            .sidebar.open {
                transform: translateX(0);
                pointer-events: auto;
            }
            .main { width: 100%; }
        }
    </style>
</head>
<body>
    <div class="layout">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="brand">רכבת ישראל</div>
            <nav>
                <a href='@Url.Action("WorkForm","Ui")'
                   class='@(Request.RawUrl.ToLower().Contains("/workform") ? "active" : "")'>טופס עבודה</a>

                <a href='@Url.Action("Employees","Ui")'
                   class='@(Request.RawUrl.ToLower().Contains("/employees") ? "active" : "")'>עובדים</a>

                <a href='@Url.Action("Risks","Ui")'
                   class='@(Request.RawUrl.ToLower().Contains("/risks") ? "active" : "")'>ניהול סיכונים</a>

                <a href='@Url.Action("History","Ui")'
                   class='@(Request.RawUrl.ToLower().Contains("/history") ? "active" : "")'>היסטוריית טפסים</a>
            </nav>
        </aside>

        <!-- Main -->
        <div class="main">
            <!-- Top Navbar -->
            <div class="topbar">
                <button id="sidebarToggle" class="btn btn-outline-secondary btn-sm me-2" type="button" aria-label="פתח/סגור תפריט">☰</button>
                <div class="title">@ViewBag.Title</div>
                <div class="actions">
                    <a href='@Url.Action("WorkForm","Ui")' class="btn btn-sm btn-primary">טופס חדש</a>
                </div>
            </div>

            <!-- Page Content -->
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- jQuery (CDN) – אם ה-main.js שלך תלוי ב-jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap Bundle (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- הסקריפט המקומי שלך אם קיים -->
    <script src='@Url.Content("~/Content/template/js/main.js")'></script>

    <!-- Toggle Sidebar (מובייל ודסקטופ) -->
    <script>
        (function () {
            var toggleBtn = document.getElementById('sidebarToggle');
            var sidebar = document.querySelector('.sidebar');

            function isMobile() { return window.matchMedia('(max-width: 992px)').matches; }

            if (toggleBtn && sidebar) {
                toggleBtn.addEventListener('click', function () {
                    if (isMobile()) {
                        sidebar.classList.toggle('open');      // מובייל: פתיחה/סגירה מהצד
                    } else {
                        sidebar.classList.toggle('collapsed'); // דסקטופ: כיווץ/הרחבה
                    }
                });
            }
        })();
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
